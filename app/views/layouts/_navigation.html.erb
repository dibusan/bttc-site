<%# navigation styled for Bootstrap 3.0 %>
<style>
  .logo-sm {
    padding-left: 10px;
    height: 150px;
    width: 200px;
  }



</style>
<nav id="sidebar">
  <div class="sidebar-header">
    <div class="row">
      <%= image_tag 'logo', class: 'logo-sm' %>
      <h3 class="text-center">BTTC</h3>
    </div>
  </div>

  <ul class="list-unstyled components">
    <p>Welcome <%= current_user.name if user_signed_in? %></p>

    <%= render 'layouts/navigation_links' %>

    <%= render 'layouts/nav_links_for_user' %>

    <%= render 'layouts/nav_links_for_admin' %>
  </ul>
</nav>
