<div>
  <table class=" table table-striped table-bordered">
    <thead>
    <tr>
      <th>Guests</th>
      <th>Email</th>
      <th>Cell</th>
    </tr>
    </thead>
    <tbody>

    <% @calendar_today.each do |date_int, reservations| %>
      <tr class="time-marker" >
        <td>
          <strong>
            <%= reservations.map(&:party_size).inject(0, &:+) %>
          </strong>
        </td>

        <td><strong><%= reservations[0].scheduled_for.strftime('%l:%M %P') %></strong></td>
        <td></td>
      </tr>

      <% reservations.each do |res| %>
        <tr>
          <td><%= res.user.name %></td>
          <td><%= res.user.email %></td>
          <td>(123) 123-1233</td>
        </tr>
      <% end %>

    <% end %>

    </tbody>
  </table>
</div>